{% extends "base.html.twig" %}

{% block title %}Page de connexion{% endblock %}

{% block body %}
<h1 class="text-center m-5">Page de compte</h1>



<!-- Modal ajout d'une photo -->
<div class="modal fade" id="addPicture" tabindex="-1" aria-labelledby="addPicture" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Ajouter une photo</h5>
      </div>
      <div class="modal-body">
        {{form_start(form)}}

        {{form_label(form.photo)}}
        {{form_widget(form.photo)}}
          <button type="submit_picture" class="btn btn-primary">J'ajoute une photo</button>
          <!-- <button type="submit_close" class="btn btn-danger">annuler</button> -->
        {{form_end(form,  {'render_rest':false})}}
      </div>
    </div>
  </div>
</div>


<!-- Affichage des informations de compte -->
<section class="d-flex flex-row">

  <div class="card m-5" style="width: 18rem;">
    <img src="{{ asset('photosUtilisateurs/'~ user.photo ) }}" class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title">{{user.nom}} {{user.prenom}}</h5>
      <ol class="card-text">
        <li>Id: {{user.id}}</li>
        <li>Email : {{user.email}}</li>
        <li>Role : {{user.role}}</li>
      </ol>
      <button type="submit" class="btn btn-primary" data-toggle="modal" data-target="#addPicture">Ajouter une photo</button>
    </div>
  </div>
  

</section>



